<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_enabled="true">
<shape
        xmlns:android="http://schemas.android.com/apk/res/android">

        <padding
            android:left="1dp"
            android:right="1dp"
            android:top="1dp"
            android:bottom="1dp"/>

        <solid android:color="@color/theme_primary"/>
   </shape>
